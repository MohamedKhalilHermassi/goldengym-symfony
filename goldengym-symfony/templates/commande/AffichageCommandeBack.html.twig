{% extends 'baseback.html.twig' %}

{% block title %}Liste des Commandes
{% endblock %}

{% block content %}
	<div class="container">
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		{# <table class="table" style="width: 50%; margin: 0 auto;"> #}
		<center>
			<h1>Liste des Commandes</h1>
			<table class="table">
				<thead>
					<tr>
						<th>Id Commande</th>
						<th>Nom Client</th>
						<th>Prénom Client</th>
						<th>Adresse Livraison</th>
						<th>Prix Commande</th>
						<th>Meth Paiement</th>
						<th>Téléphone</th>

					</tr>
				</thead>
				{% for commande in commandes %}
					<tr>
						<td>{{ commande.id }}</td>
						<td>{{ commande.user.nom }}</td>
						<td>{{ commande.user.prenom }}</td>
						<td>{{ commande.AdresseLivraison }}</td>
						<td>{{ commande.prixCommande }}</td>
						<td>{{ commande.methodePaiement }}</td>
						<td>{{ commande.telephone }}</td>


						<td>
							<a class="btn btn-round btn-twitter" href="{{ path('modifier_commande',{'id' : commande.id}) }}">Modifier</a>
						</td>
						<td>
							<a class="btn btn-round btn-twitter" href="{{ path('supprimer_commande',{'id' : commande.id}) }}">Supprimer</a>
						</td>
						<td>
							<a class="btn btn-round btn-twitter" href="{{ path('app_ligne_commande',{'id' : commande.id}) }}">Détails</a>
						</td>
					</tr>
				{% endfor %}
			</table>

			<div class="container">
				<div class="row">
					<div class="d-felx align-items-center justify-content-center">
						{{ knp_pagination_render(commandes) }}
					</div>
				</div>
			</div>
		</center>
	</div>


{% endblock %}

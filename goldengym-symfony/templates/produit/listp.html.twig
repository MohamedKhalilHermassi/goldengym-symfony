{% extends 'baseback.html.twig' %}

{% block title %}gestion des produits{% endblock %}
{% block content %}
<div class="container">
<br>
<br>
<br>
<br>
<br>
<br>
<center><h1>Liste des produits</h1></center>
<br>
<br>

<table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>nom categorie</th>
                <th>Name</th>
                <th>description</th>
                <th>prix produit</th>
                <th>quantite produit</th>
                <th>image produit</th>
                <th>date expiration</th>
                <th>actions</th>
                <th></th>


            </tr>
        </thead>
        <tbody>
        {% for p in produit %}
            <tr>
                <td>{{ p.id }}</td>
                <td>{{p.category.nomCategory}}</td>
                <td>{{ p.nom }}</td>
                <td>{{p.description}}</td>
                <td>{{p.prixproduit}}dt</td>
                {% if p.quantiteproduit >5 %}
                <td bgcolor="green">{{p.quantiteproduit}}</td>
                {% elseif p.quantiteproduit <= 0 %}
                <td bgcolor="red">{{p.quantiteproduit}}</td>
                {% else %}
                <td bgcolor="ff8000">{{p.quantiteproduit}}</td>
                {% endif %}
                <td><img style="width:200px; height:200px" src="{{asset('uploads/produits/'~p.imageproduit)}}" alt=""></td>
                <td>{{p.dateexpiration|date("d-m-Y")}}</td>
                <td>
                <a href="{{path('editp',{id:p.id})}}" class="btn btn-round btn-twitter">modifier</a>
                <a href="{{path('deletep',{id:p.id})}}" class="btn btn-round btn-twitter">supprimer</a>
                </td>
                <td><a href="{{path('getid',{id:p.id})}}" class="btn btn-round btn-twitter">afficher</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <center>
    <form action="{{ path('addp') }}">
    <button class="btn btn-round btn-facebook">Ajouter un nouveau produit</button>
    </form>
    </center>
    </div>
{% endblock %}